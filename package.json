{
  "name": "vscode-scss-formatter",
  "displayName": "SCSS Formatter",
  "description": "A Visual Studio Code Extension to format SCSS",
  "version": "1.1.0",
  "publisher": "sibiraj-s",
  "licence": "MIT",
  "private": true,
  "repository": "https://github.com/sibiraj-s/vscode-scss-formatter.git",
  "bugs": "https://github.com/sibiraj-s/vscode-scss-formatter/issues",
  "homepage": "https://github.com/sibiraj-s/vscode-scss-formatter",
  "engines": {
    "node": "^10",
    "vscode": "^1.29.0"
  },
  "icon": "assets/sass.png",
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "SCSS Formatter Configuration",
        "properties": {
          "scssFormatter.useTabs": {
            "type": "boolean",
            "default": false,
            "description": "Indent lines with tabs instead of spaces."
          },
          "scssFormatter.tabWidth": {
            "type": "number",
            "default": 2,
            "description": "Specify the number of spaces per indentation-level."
          },
          "scssFormatter.singleQuote": {
            "type": "boolean",
            "default": false,
            "description": "Use single quotes instead of double quotes."
          }
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run lint",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "prettier": "^1.15.2"
  },
  "devDependencies": {
    "@types/node": "^10.12.9",
    "husky": "^1.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "vscode": "^1.1.21"
  }
}
